{
  "name": "myapp",
  "scripts": {
    "up":     "docker compose up -d --wait",
    "down":   "docker compose down -v",
    "db":     "bun run down && bun run up",
    "dev":    "bun --watch server.ts"
  },
  "dependencies": {
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9"
  },
  "bun-create": {
    "postinstall": "bun setup.ts",
    "start": "bun run db && bun run dev"
  }
}
